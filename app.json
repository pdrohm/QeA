{
  "expo": {
    "name": "q&a",
    "slug": "q&a",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "qa",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Permita que o $(PRODUCT_NAME) acesse seu microfone para entrada de voz",
        "NSSpeechRecognitionUsageDescription": "Permita que o $(PRODUCT_NAME) use reconhecimento de fala para entrada de voz"
      },
      "bundleIdentifier": "com.pdrohm.qa"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "RECORD_AUDIO",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.pdrohm.qa"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#FFFFFF"
        }
      ],
      "expo-speech-recognition",
      "expo-dev-client"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
